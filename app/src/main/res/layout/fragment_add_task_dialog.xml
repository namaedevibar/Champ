<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffcf"
    tools:context="com.devibar.champ.Fragment.ManageTaskDialogFragment">

 <TextView
     android:id="@+id/tvAddTask"
     style="@style/CardHeadingStyle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_margin="16dp"
     android:fontFamily="sans-serif-condensed"
     android:text="ADD TASK"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_name"
        app:layout_constraintTop_toBottomOf="@+id/tvAddTask"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        style="@style/TextViewStyle"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/etTaskName"
        style="@style/EditTextStyle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_blue_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tvTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_description"
        app:layout_constraintTop_toBottomOf="@+id/etTaskName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        style="@style/TextViewStyle"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/etTaskDescription"
        style="@style/EditTextStyle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_blue_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tvRewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rewards"
        app:layout_constraintTop_toBottomOf="@+id/etTaskDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        style="@style/TextViewStyle"
        android:layout_marginStart="16dp" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spnRewards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRewards"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        android:textColor="@color/colorPrimary"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="add"
        android:layout_margin="16dp"
        style="@style/LoginStyle"
        app:layout_constraintTop_toBottomOf="@+id/spnRewards" />


</android.support.constraint.ConstraintLayout>
