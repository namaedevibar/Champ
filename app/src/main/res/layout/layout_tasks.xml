<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:stepUi="http://schemas.android.com/apk/res-auto"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            stepUi:cardElevation="2dp"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            stepUi:layout_constraintBottom_toBottomOf="parent"
            stepUi:layout_constraintLeft_toLeftOf="parent"
            stepUi:layout_constraintRight_toRightOf="parent"
            stepUi:layout_constraintTop_toTopOf="parent"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cheekiat.indicatorsteplib.StepProgress
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    stepUi:dotDefaultSize="40dp"
                    stepUi:dotSelectedSize="50dp"
                    stepUi:itemMargins="16dp"
                    stepUi:selectedColor="@color/colorPrimary"
                    stepUi:unselectColor="#999999"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    stepUi:layout_constraintTop_toTopOf="parent"
                    stepUi:layout_constraintLeft_toLeftOf="parent"
                    stepUi:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    style="@style/CardContentStyle"
                    android:text="Status"
                    stepUi:layout_constraintLeft_toLeftOf="parent"
                    stepUi:layout_constraintRight_toRightOf="parent"
                    stepUi:layout_constraintTop_toBottomOf="@+id/status"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:id="@+id/txtTask"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    style="@style/CardContentStyle"
                    android:text="TASK"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    stepUi:layout_constraintLeft_toLeftOf="parent"
                    stepUi:layout_constraintRight_toRightOf="parent"
                    stepUi:layout_constraintTop_toBottomOf="@+id/txtStatus"
                    stepUi:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />




            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>



    </android.support.constraint.ConstraintLayout>






</RelativeLayout>